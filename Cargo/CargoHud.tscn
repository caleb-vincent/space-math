[sub_resource type="GDScript" id=1]
script/source = "extends Control

signal msgGone

export var shipName : String = \"M.S.S. Al-Khwārizmī\" setget _setShipName
export var time = 0.0 setget _setTime
export var loadCount : int = 0 setget _setLoad
export var loadTotal : int = 0 setget _setTotal
export var lives: int = 0 setget _setLives
export var score = 0 setget _setScore
export var msgText : String setget _setMessage


func _ready()-> void:
	_setLives(lives)
	_setScore(score)

func _setMessage(msg : String) -> void:
	msgText = msg
	$CenterContainer/MessageBox/Label.text = msgText
	$CenterContainer/MessageBox.visible = true
	$MsgTimer.start()


func _setShipName(name : String) -> void:
	shipName = name
	$StatusBar/ShipName/Label.text = shipName


func _setTime(t : float) -> void:
	time = t
	if t == 0:
		$StatusBar/TimeRemaining/Label.text = \"Departs: NOW\"
	else:
		$StatusBar/TimeRemaining/Label.text = \"Departs in: \" +  \"%03.1f\" % [t]


func _setLives(l : int) -> void:
	lives = l
	$StatusBar/Lives/Label.text = str(l)


func _setLoad(count : int) -> void:
	loadCount = count
	_updateLoading()


func _setScore(s : int) -> void:
	score = s
	$StatusBar/Score/Label.text = str(score)


func _setTotal(total : int) -> void:
	loadTotal = total
	_updateLoading()


func _updateLoading() -> void:
	$StatusBar/Loading/Label.text = \"Loaded: \" + \"%3d\" % [loadCount] + \" of \" + \"%3d\" % [loadTotal]


func _on_MsgTimer_timeout() -> void:
	$CenterContainer/MessageBox.visible = false
	$CenterContainer/MessageBox/Label.text = \"\"
	msgText = \"\"
	emit_signal(\"msgGone\")
"

